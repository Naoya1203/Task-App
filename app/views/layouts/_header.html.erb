    <%= link_to "TaskApp", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right" >
        <li ><%= link_to "Top", root_path, id:"header-list" %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", '#' ,id:"header-list" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle header-list" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Show", current_user, id:"header-list" %></li>
              <li><%= link_to "Settings", '#', id:"header-list" %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, method: :delete, id:"header" %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path, id:"header-list" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
